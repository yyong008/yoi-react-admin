  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --config ./build/webpack/webpack.config.dev.js",
    "dev:chain": "webpack-dev-server --config ./build/webpack-chain/webpack.config.dev.chain.js",
    "build": "webpack --config ./build/webpack/webpack.config.build.js",
    "build:chain": "webpack --config ./build/webpack-chain/webpack.config.build.chain.js",
    "dev:node": "node ./build/dev.js",
    "dev:build": "node ./build/build.js",
    "eslint:lint": "eslint --ext .jsx --ext .js src/",
    "eslint:fix": "eslint --fix --ext .jsx --ext .js src/",
